<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/info" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/development"
                android:layout_width="180dp"
                android:layout_height="173dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="52dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/openbox_drawable"
                android:text="Development"
                android:textColor="#ffffff"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/organization"
                android:layout_width="180dp"
                android:layout_height="173dp"
                android:layout_marginTop="52dp"
                android:layout_marginEnd="16dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/openbox_drawable"
                android:text="Organization"
                android:textColor="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/effectivelanguageuse"
                android:layout_width="180dp"
                android:layout_height="173dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/openbox_drawable"
                android:text="Effective\n Language Use"
                android:textColor="#ffffff"
                app:layout_constraintHorizontal_weight="5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_development"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/sentencestructure"
                android:layout_width="180dp"
                android:layout_height="173dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/openbox_drawable"
                android:text="Sentence Structure"
                android:textColor="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="5"
                app:layout_constraintTop_toBottomOf="@+id/et_organization"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/conventionsofusage"
                android:layout_width="180dp"
                android:layout_height="173dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/openbox_drawable"
                android:text="Conventions of\n Usage"
                android:textColor="#ffffff"
                app:layout_constraintHorizontal_weight="5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_effectivelanguageuse"
                tools:ignore="MissingConstraints" />

            <Button
                android:id="@+id/conventionsofpunctuation"
                android:layout_width="180dp"
                android:layout_height="173dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/openbox_drawable"
                android:text="Conventions of\n Punctuation"
                android:textColor="#ffffff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_sentencestructure"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/et_development"
                android:layout_width="151dp"
                android:layout_height="49dp"
                android:ems="10"
                android:hint="Incorrect answer"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/development"
                app:layout_constraintStart_toStartOf="@+id/development"
                app:layout_constraintTop_toBottomOf="@+id/development" />

            <EditText
                android:id="@+id/et_organization"
                android:layout_width="151dp"
                android:layout_height="49dp"
                android:ems="10"
                android:hint="Incorrect answer"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/organization"
                app:layout_constraintStart_toStartOf="@+id/organization"
                app:layout_constraintTop_toBottomOf="@+id/organization" />

            <EditText
                android:id="@+id/et_effectivelanguageuse"
                android:layout_width="151dp"
                android:layout_height="49dp"
                android:ems="10"
                android:hint="Incorrect answer"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/effectivelanguageuse"
                app:layout_constraintStart_toStartOf="@+id/effectivelanguageuse"
                app:layout_constraintTop_toBottomOf="@+id/effectivelanguageuse" />

            <EditText
                android:id="@+id/et_sentencestructure"
                android:layout_width="151dp"
                android:layout_height="49dp"
                android:ems="10"
                android:hint="Incorrect answer"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/sentencestructure"
                app:layout_constraintStart_toStartOf="@+id/sentencestructure"
                app:layout_constraintTop_toBottomOf="@+id/sentencestructure" />

            <EditText
                android:id="@+id/et_conventionsofusage"
                android:layout_width="151dp"
                android:layout_height="49dp"
                android:ems="10"
                android:hint="Incorrect answer"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/conventionsofusage"
                app:layout_constraintStart_toStartOf="@+id/conventionsofusage"
                app:layout_constraintTop_toBottomOf="@+id/conventionsofusage" />

            <EditText
                android:id="@+id/et_conventionsofpunctuation"
                android:layout_width="151dp"
                android:layout_height="49dp"
                android:ems="10"
                android:hint="Incorrect answer"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="@+id/conventionsofpunctuation"
                app:layout_constraintStart_toStartOf="@+id/conventionsofpunctuation"
                app:layout_constraintTop_toBottomOf="@+id/conventionsofpunctuation" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WRITING &amp; LANGUAGE"
        android:textSize="30sp"
        android:textColor="#cc6666"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/home_drawable"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/info"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/info" />

</androidx.constraintlayout.widget.ConstraintLayout>